{
    "diagnostic.refreshOnInsertMode": true,
    "colors.filetypes": ["*"],
    "semanticTokens.filetypes": ["*"],
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "trace.server": "verbose",
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "resourceDir": "/usr/lib/clang/14.0.6/",
                "cache": {
                    "directory": "/tmp/ccls"
                },
                "highlight": { 
                    "lsRanges" : true 
                },
                "clang": {
                    "extraArgs": [ "-std=c++20" ]
                }
            },
            "args": ["-v=2"],
            "enable": false
        },
        "haskell": {
          "command": "haskell-language-server-wrapper",
          "args": [
            "--lsp"
          ],
          "rootPatterns": [
            ".stack.yaml",
            ".hie-bios",
            "BUILD.bazel",
            "cabal.config",
            "package.yaml"
          ],
          "filetypes": [
            "hs",
            "lhs",
            "haskell"
          ]
        },
        "csharp-ls": {
          "command": "csharp-ls",
          "filetypes": ["cs"],
          "rootPatterns": ["*.csproj", ".vim/", ".git/", ".hg/"]
        }
      },
    "clangd.arguments": [ "--clang-tidy", "-j=12", "--malloc-trim", "--background-index", "--pch-storage=memory" , "--inlay-hints=true"],
    "clangd.fallbackFlags": [ "-std=c++20", "-stdlib=libstdc++", "-Wpedantic", "-Wall" ],
    "clangd.trace.server": "verbose",
    "cSpell.userWords": [
      "klog"
    ],
    "highlight.colorNames.enable": false,
    "coc.preferences.jumpCommand": "split",
    "diagnostic.errorSign": "?!",
    "diagnostic.hintSign": "?",
    "diagnostic.infoSign": ">>",
    "diagnostic.warningSign": "!",
    "diagnostic.enableHighlightLineNumber": false,
    "inlayHint.enable": true,
    "inlayHint.display": true,
    "sumneko-lua.enableNvimLuaDev": true,
    "coc.preferences.enableMessageDialog":  false
}

