{
    "diagnostic.refreshOnInsertMode": true,
    "colors.filetypes": ["*"],
    "semanticTokens.filetypes": ["*"],
    "languageserver": {
        "haskell": {
          "command": "haskell-language-server-wrapper",
          "args": [
            "--lsp"
          ],
          "rootPatterns": [
            ".stack.yaml",
            ".hie-bios",
            "BUILD.bazel",
            "cabal.config",
            "package.yaml"
          ],
          "filetypes": [
            "hs",
            "lhs",
            "haskell"
          ]
        },
        "csharp-ls": {
          "command": "csharp-ls",
          "filetypes": ["cs"],
          "rootPatterns": ["*.csproj", ".vim/", ".git/", ".hg/"]
        }
      },
    "clangd.arguments": [ "--clang-tidy", "-j=12", "--malloc-trim", "--background-index", "--pch-storage=memory", "--log=verbose" ],
    "clangd.fallbackFlags": [ "-std=c++20", "-stdlib=libstdc++", "-Wpedantic", "-Wall" ],
    "clangd.trace.server": "verbose",
    "cSpell.userWords": [
      "klog"
    ],
    "highlight.colorNames.enable": false,
    "coc.preferences.jumpCommand": "split",
    "diagnostic.errorSign": "?!",
    "diagnostic.hintSign": "?",
    "diagnostic.infoSign": ">>",
    "diagnostic.warningSign": "!",
    "diagnostic.enableHighlightLineNumber": false,
    "inlayHint.enable": true,
    "inlayHint.display": true,
    "sumneko-lua.enableNvimLuaDev": true,
    "coc.preferences.enableMessageDialog":  false
}

